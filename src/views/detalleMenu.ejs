<!DOCTYPE html>
<html>
  <%- include("./partials/head.ejs") %>
  <body>
    <!-- Navbar (sit on top) -->
    <%- include("./partials/navbar.ejs") %>

    <!-- Header -->
    <%- include("./partials/header.ejs") %>

    <!-- Page content -->
    <div class="ps-content">

      <!-- Menu Section -->
      <div class="ps-row ps-padding-64" id="menu">
        <div class="ps-col l6 ps-padding-large">
          <% const item = menu.find(item => item.id == id) || {name: "Plato tipico",description: "Plato tipico", price:"U$D 1.00"} %> 
          <h1 class="ps-center"><%= item.name %></h1>
          <br />
          <h4><%= item.description %></h4>
          <p class="ps-text-grey">
            <%= item.price %>
          </p>
        </div>

        <div class="ps-col l6 ps-padding-large ps-img-menu">
          <img
            src="/images/menu.jpg"
            class="ps-round ps-image ps-opacity-min"
            alt="Menu"
          />
        </div>
      </div>

      <!-- Footer -->
      <%- include("./partials/footer.ejs") %>
    </div>
  </body>
</html>
